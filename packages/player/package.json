{
  "name": "@smart-tv/player",
  "version": "1.3.2",
  "description": "A comprehensive Smart TV video player built with Shaka Player and spatial navigation support",
  "author": "ForidPathan",
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:styles": "postcss ./src/styles.css -o ./dist/styles.css",
    "build:components": "tsup",
    "build": "pnpm run build:components && pnpm run build:styles",
    "dev:styles": "postcss ./src/styles.css -o ./dist/styles.css --watch",
    "dev:components": "tsup --watch",
    "dev": "pnpm run dev:components & pnpm run dev:styles",
    "check-types": "tsc --noEmit",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "test": "echo \"no tests yet\""
  },
  "keywords": [
    "smart-tv",
    "video-player",
    "shaka-player",
    "spatial-navigation",
    "react",
    "typescript",
    "adaptive-streaming",
    "dash",
    "hls",
    "tv-remote"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smarttv-dev/smart-tv.git",
    "directory": "packages/player"
  },
  "bugs": {
    "url": "https://github.com/smarttv-dev/smart-tv/issues"
  },
  "homepage": "https://github.com/smarttv-dev/smart-tv/tree/main/packages/player#readme",
  "peerDependencies": {
    "@smart-tv/ui": "workspace:*",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "shaka-player": "^4.10.0"
  },
  "devDependencies": {
    "shaka-player": "^4.10.0",
    "@smart-tv/ui": "workspace:*",
    "@smart-tv/eslint-config": "workspace:*",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/node": "^24.6.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "clsx": "^2.1.1",
    "css-has-pseudo": "^7.0.3",
    "esbuild-plugin-babel": "^0.2.3",
    "postcss": "^8.4.38",
    "postcss-calc": "^10.1.1",
    "postcss-cli": "^11.0.1",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-properties": "^14.0.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-focus-visible": "^10.0.1",
    "postcss-opacity-percentage": "^3.0.0",
    "postcss-preset-env": "^7.8.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.5.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
